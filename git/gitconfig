[user]
	name = Ian Liao
	email = ianryanliao@gmail.com
[push]
        default = simple
[credential]
        helper = osxkeychain
[merge]
        conflictstyle = diff3
[alias]
        unstage = reset HEAD --
        log = log --pretty=format:\"%h - %C(green)%an%C(white), %ar : %C(yellow)%s\"
        remote = remote -v
        branch = branch -vv
        status = status -sb
[filter "lfs"]
        clean = git-lfs clean %f
        smudge = git-lfs smudge %f
        required = true
[core]
        excludesfile = /Users/irliao/.gitignore_global
        fileMode = false # ignore file mode difference
        autocrlf = input # better cross-platform line ending handling
	      pager = diff-so-fancy | less --tabs=4 -RFX

[color]
    ui = always

[color "branch"]
    current = green
    local = magenta
    remote = yellow

[color "diff"]
    meta = yellow bold
    frag = magenta
    old = red
    new = green
    whitespace = white reverse
    commit = blue reverse

[color "status"]
    added = green
    changed = red
    untracked = cyan reverse
    branch = magenta

[web]
    browser = safari

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
